<h1>New Project</h1>

<div class="col-xs-12">

  <%= form_for @project do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>


  <h3>Add Rewards</h3>

  <div id="rewards">
    <%= f.fields_for :rewards do |reward_fields| %>
      <%= render 'reward_fields', f: reward_fields %>
    <% end %>

    <div class="links">
      <%= link_to_add_association "Add Reward", f, :rewards %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

  <% end %>


</div>
